{
  "name": "windows-setup",
  "version": "0.28.0",
  "description": "Windows development environment setup scripts",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/windows-setup.git"
  },
  "engines": {
    "node": ">=10.21.0",
    "npm": ">=6.8.0"
  },
  "scripts": {
    "prepare": "husky install",
    "updates": "npx ncu",
    "release": "np"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "commitlint-config-gitmoji": "^2.2.6",
    "husky": "^8.0.1",
    "np": "^7.6.2"
  },
  "resolutions": {
    "got": "^11.8.5"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "type-empty": [
        0,
        "never"
      ],
      "subject-empty": [
        0,
        "never"
      ]
    }
  }
}
