{
  "name": "windows-setup",
  "version": "0.26.3",
  "description": "Windows development environment setup scripts",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/windows-setup.git"
  },
  "engines": {
    "node": ">=10.21.0",
    "npm": ">=6.8.0"
  },
  "scripts": {
    "updates": "npx ncu",
    "release": "np"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "commitlint-config-gitmoji": "^2.2.5",
    "husky": "^4.3.8",
    "np": "^7.5.0"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "type-empty": [
        0,
        "never"
      ],
      "subject-empty": [
        0,
        "never"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
